<div class="container mt-5">
    <h1>Product List</h1>
    <a class="btn btn-primary" style="" href="/products/new">Add Products</a>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td><img class="list-img" src="{{this.imagePath}}" alt=""></td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>${{this.price}}</td>
                <td>
                    <a class="btn btn-primary" href="/products/{{this._id}}/edit">Edit</a>
                    <a href="/delete/{{this.id}}?_method=DELETE" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>